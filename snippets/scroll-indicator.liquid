{%- comment -%}
  Scroll Indicator - Bouncing Ellipses Animation
  Self-contained component with GSAP animation
{%- endcomment -%}

<style>
.scroll-indicator {
  position: relative;
  width: 100px;
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scroll-indicator .ellipse {
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  left: 50%;
  transform: translateX(-50%);
  will-change: transform;
}

.scroll-indicator .ellipse-1 {
  background: #ffffff;
  z-index: 1;
  top: 80px;
}

.scroll-indicator .ellipse-2 {
  background: #eaeaea;
  z-index: 2;
  top: 60px;
}

.scroll-indicator .ellipse-3 {
  background: #e1e1e1;
  z-index: 3;
  top: 40px;
}

.scroll-indicator .ellipse-4 {
  background: #e3e3e3;
  z-index: 4;
  top: 20px;
}
</style>

<div class="scroll-indicator" id="scroll-indicator-{{ section.id }}">
  <div class="ellipse ellipse-1"></div>
  <div class="ellipse ellipse-2"></div>
  <div class="ellipse ellipse-3"></div>
  <div class="ellipse ellipse-4"></div>
</div>

<script>
(function() {
  const indicatorId = 'scroll-indicator-{{ section.id }}';
  const container = document.getElementById(indicatorId);
  
  if (!container) {
    console.error('Scroll indicator container not found');
    return;
  }

  function initScrollAnimation() {
    if (typeof gsap === 'undefined') {
      console.log('GSAP not loaded yet, retrying...');
      setTimeout(initScrollAnimation, 100);
      return;
    }

    console.log('Initializing scroll indicator animation');
    
    const ellipses = container.querySelectorAll('.ellipse');
    
    if (ellipses.length === 0) {
      console.error('No ellipses found in scroll indicator');
      return;
    }

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReducedMotion) {
      console.log('Reduced motion enabled, skipping animation');
      return;
    }

    const timeline = gsap.timeline({ repeat: -1 });
    let zIndexOrder = [1, 2, 3, 4];

    function cycleZIndex() {
      const first = zIndexOrder.shift();
      zIndexOrder.push(first);
      ellipses.forEach((ellipse, i) => {
        ellipse.style.zIndex = zIndexOrder[i];
      });
    }

    // Create bounce sequence
    ellipses.forEach((ellipse, i) => {
      const delay = i * 0.15;

      // Bounce down
      timeline.to(ellipse, {
        y: 15,
        duration: 0.5,
        ease: 'power1.out'
      }, delay);

      // Bounce back up
      timeline.to(ellipse, {
        y: 0,
        duration: 0.7,
        ease: 'elastic.out(1, 0.5)',
        onComplete: function() {
          if (i === 3) {
            cycleZIndex();
          }
        }
      }, 0.5 + delay);
    });

    // Pause before loop repeats
    timeline.to({}, { duration: 0.5 });

    console.log('Scroll indicator animation started, duration:', timeline.duration());
  }

  // Start initialization
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollAnimation);
  } else {
    setTimeout(initScrollAnimation, 50);
  }
})();
</script>
