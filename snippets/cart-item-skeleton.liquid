{% comment %}
  Cart Item Skeleton
  Loading state for cart items during updates/removal
  Note: This renders the inner content only (no outer wrapper)

  Usage:
  {% render 'cart-item-skeleton' %}
{% endcomment %}

{%- comment -%} Skeleton Image {%- endcomment -%}
<div class="cart-drawer__item-image">
  <div class="cart-drawer__item-image-wrapper">
    <div class="skeleton skeleton--image">&nbsp;</div>
  </div>
</div>

{%- comment -%} Skeleton Details {%- endcomment -%}
<div class="cart-drawer__item-details-container">
  <div class="cart-drawer__item-details">
    {%- comment -%} Left Column Skeleton {%- endcomment -%}
    <div class="cart-drawer__item-info">
      <div class="cart-drawer__item-product-info">
        <div class="skeleton skeleton--text" style="width: 80px; height: 12px; margin-bottom: 6px;">&nbsp;</div>
        <div class="skeleton skeleton--text" style="width: 120px; height: 12px; margin-bottom: 4px;">&nbsp;</div>
        <div class="skeleton skeleton--text" style="width: 60px; height: 12px;">&nbsp;</div>
      </div>

      <div class="cart-drawer__item-options">
        <div class="cart-drawer__item-option">
          <div class="skeleton skeleton--circle" style="width: 24px; height: 24px;">&nbsp;</div>
          <div class="skeleton skeleton--text" style="width: 50px; height: 12px;">&nbsp;</div>
        </div>
        <div class="cart-drawer__item-option">
          <div class="skeleton skeleton--circle" style="width: 24px; height: 24px;">&nbsp;</div>
          <div class="skeleton skeleton--text" style="width: 60px; height: 12px;">&nbsp;</div>
        </div>
      </div>
    </div>

    {%- comment -%} Right Column Skeleton {%- endcomment -%}
    <div class="cart-drawer__item-actions">
      <div class="cart-drawer__item-price-row">
        <div class="skeleton skeleton--text" style="width: 60px; height: 12px;">&nbsp;</div>
      </div>
      <div class="skeleton skeleton--rounded" style="width: 98px; height: 34px;">&nbsp;</div>
      <div class="skeleton skeleton--text" style="width: 80px; height: 12px; margin-left: auto;">&nbsp;</div>
    </div>
  </div>
</div>
